<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="warehouse_req_form_view">
            <field name="name">warehouse.req.form</field>
            <field name="model">warehouse.req</field>
            <field name="arch" type="xml">
                <form string="Requirement Form">
                    <header>
                        <button name="require" type="workflow"
                                string="Require" states="draft"
                                class="oe_highlight"/>
                        <button name="approve" type="workflow"
                                string="Approve" states="required"
                                class="oe_highlight"/>
                        <!-- <button name="action_check_supplied" type="object" TODO
                                string="Check Supplied" states="approved"
                                class="oe_highlight"/> -->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="claimant_id"/>
                                <field name="warehouse"/>
                                <field name="reason"/>
                                <field name="date_requested"/>
                                <field name="shipping_type"/>
                                <field name="deliver_to"/>
                            </group>
                            <group>
                                <field name="purchase_required"/>
                                <field name="reference_type"/>
                                <field name="reference_folio"/>
                                <field name="date_required"/>
                                <field name="client_id"/>
                                <field name="deliver_address"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="product_ids" mode="tree">
                                    <tree string="Requirement Order Lines" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" string="Product"/>
                                        <field name="name" string="Description"/>
                                        <field name="specs"/>
                                        <field name="on_hand"/>
                                        <field name="requested_qty" string="Requested Qty"/>
                                        <field name="auothorized_qty" string="Auth. Qty"/>
                                        <field name="ordered_qty" string="Ordered Qty"/>
                                        <field name="supplied_qty" string="Supplied Qty"/>
                                        <field name="suggested_supplier"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="warehouse_req_list_action">
            <field name="name">Requirements</field>
            <field name="res_model">warehouse.req</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <data>
            <menuitem id="warehouse_req_menu" name="Requirements"
                      parent="stock.menu_stock_inventory_control"
                      action="warehouse_req_list_action"/>
        </data>
    </data>
</odoo>
